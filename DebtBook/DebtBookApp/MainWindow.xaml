<Window x:Class="DebtBookApp.MainWindow"
     
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBookApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200"
        DataContext="{Binding Source={StaticResource ViewModelLocator},
        Path=DebtBookViewModel}">
    <Grid>
        <Label Content="Debitors:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <DataGrid  ItemsSource="{Binding }" 
                   IsSynchronizedWithCurrentItem="True"
                   SelectedIndex="{Binding Path=CurrentIndex}"
                   SelectedItem="{Binding Path=CurrenDebit}"
                   Name="dgridAgents" 
                   Grid.Column="2" 
                   Margin="9"  
                   CanUserAddRows="False" 
                   CanUserDeleteRows="False" 
                   IsReadOnly="True"
                   MinRowHeight="12" 
                   MouseLeftButtonDown="dgridAgents_MouseLeftButtonDown"
        />

        <Button Content="Add" HorizontalAlignment="Right" Margin="10,10,10,0" VerticalAlignment="Top" Command="{Binding AddDebitCommand }"/>
        <!--Command="{Binding }"-->
    </Grid>
</Window>

